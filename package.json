{
  "name": "group-chat-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev:web": "pnpm --filter group-chat-front dev",
    "dev:server": "pnpm --filter group-chat-backend dev",
    "dev": "pnpm exec concurrently \"pnpm run dev:server\" \"pnpm run dev:web\"",
    "build:web": "pnpm --filter group-chat-front build",
    "build:server": "pnpm --filter group-chat-backend build",
    "build": "pnpm run build:server && pnpm run build:web",
    "start:server": "pnpm --filter group-chat-backend start",
    "start:web": "pnpm --filter group-chat-front start",
    "start": "pnpm exec concurrently \"pnpm run start:server\" \"pnpm run start:web\""
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
